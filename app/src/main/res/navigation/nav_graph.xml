<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.project_helper.features.auth.fragments.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_login_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.project_helper.features.auth.fragments.RegisterFragment"
        android:label="Register">

        <action
            android:id="@+id/action_registerFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.project_helper.features.profile.ProfileFragment"
        android:label="Profile">

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />

        <action
            android:id="@+id/action_ProfileFragment_to_RoleSelectionFragment"
            app:destination="@id/roleSelectionFragment" />

    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.project_helper.features.profile.EditProfileFragment"
        android:label="Edit Profile">

        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

    </fragment>

    <fragment
        android:id="@+id/roleSelectionFragment"
        android:name="com.example.project_helper.features.fragments.RoleSelectionFragment"
        android:label="RoleSelectionFragment">

        <action
            android:id="@+id/action_RoleSelectionFragment_to_NeuroChatFragment"
            app:destination="@id/NeuroChatFragment" />

    </fragment>

    <fragment
        android:id="@+id/NeuroChatFragment"
        android:name="com.example.project_helper.features.auth.fragments.NeuroChatFragment"
        android:label="Profile"/>

</navigation>